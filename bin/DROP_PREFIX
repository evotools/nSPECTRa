#!/usr/bin/env python
import sys


def parse_args():
    import argparse

    # Argument definition
    parser = argparse.ArgumentParser()
    parser.add_argument(
        "-i",
        "--infile",
        metavar="maffile.maf/bed",
        type=str,
        help="Input alignments",
        dest="maf",
        required=True,
    )
    parser.add_argument(
        "-p",
        "--prefix",
        metavar="prefix",
        type=str,
        help="Prefix to drop.",
        dest="prefix",
        required=True,
        default=None,
    )
    return parser.parse_args()


def main():
    args = parse_args()
    if args.maf == "-" or args.maf == "stdin":
        infile = sys.stdin
    else:
        infile = open(args.maf)
    for line in infile:
        if args.prefix is not None:
            print(line.strip().replace(args.prefix + ".", ""))
    return 0


if __name__ == "__main__":
    main()
